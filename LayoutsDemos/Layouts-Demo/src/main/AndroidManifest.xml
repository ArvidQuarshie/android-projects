<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.droidux.demos.layouts">

    <uses-sdk android:minSdkVersion="9" android:targetSdkVersion="19"/>
    <application
        android:label="@string/app_name"
        android:icon="@drawable/ic_launcher"
        android:name=".LayoutsSampleApp"
        android:theme="@style/AppTheme"
        >
        <activity android:name="DroidUXDemos">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".internal.DroidUXDemosBrowser"/>
        <activity
            android:name=".ReflectionLayoutTest"
            android:label="@string/activity_reflectionlayout"
            android:hardwareAccelerated="false"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="com.droidux.intent.category.DEMOS_LAYOUTS"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ReflectionLayoutEffectTest"
            android:label="@string/activity_reflectionlayout_effect"
            android:hardwareAccelerated="false"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="com.droidux.intent.category.DEMOS_LAYOUTS"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ReflectionDrawableTest"
            android:label="@string/activity_reflection_drawable"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="com.droidux.intent.category.DEMOS_LAYOUTS"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".MaskedLayoutTest"
            android:label="@string/activity_masked_layout"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="com.droidux.intent.category.DEMOS_LAYOUTS"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".MaskedDrawableTest"
            android:label="@string/activity_masked_drawable"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="com.droidux.intent.category.DEMOS_LAYOUTS"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".CurtainFoldLayoutTest"
            android:label="@string/activity_curtain_fold"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="com.droidux.intent.category.DEMOS_LAYOUTS"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".AvatarImageViewTest"
            android:label="@string/activity_avatarimageview"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="com.droidux.intent.category.DEMOS_LAYOUTS"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
