<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ActionBar.Solid.Demos" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_solid_demos</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_demos</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_demos</item>
        <item name="progressBarStyle">@style/ProgressBar.Demos</item>
    </style>
    <style name="ActionBar.Transparent.Demos" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@drawable/ab_transparent_demos</item>
        <item name="progressBarStyle">@style/ProgressBar.Demos</item>
    </style>
    <style name="ActionBarTabStyle.Demos" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_demos</item>
    </style>
    <style name="ActionButton.CloseMode.Demos" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_demos</item>
    </style>
    <style name="DropDownListView.Demos" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_demos</item>
    </style>
    <style name="DropDownNav.Demos" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_demos</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_demos</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_demos</item>
    </style>
    <style name="PopupMenu.Demos" parent="@style/Widget.AppCompat.PopupMenu">	
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_demos</item>	
    </style>
    <style name="ProgressBar.Demos" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_demos</item>
    </style>
    <style name="Theme.Demos" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_demos</item>
        <item name="popupMenuStyle">@style/PopupMenu.Demos</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Demos</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Demos</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Demos</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Demos</item>
        <item name="actionModeBackground">@drawable/cab_background_top_demos</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_demos</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Demos</item>

                <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.Demos.Widget</item>

    </style>
    <style name="Theme.Demos.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Demos</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Demos</item>
    </style>
</resources>